{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-fundationalcsharp",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/FundationalCSharp/fundationalcsharp-dotnet.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-fundationalcsharp",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/FundationalCSharp/fundationalcsharp-dotnet.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch-fundationalcsharp",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/FundationalCSharp/fundationalcsharp-dotnet.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
